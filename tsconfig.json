{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}